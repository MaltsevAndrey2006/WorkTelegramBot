<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>

    <!-- Пробелы в конце строк -->
    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="message" value="Лишние пробелы в конце строки"/>
    </module>

    <module name="TreeWalker">
        <!-- Лишние точки с запятой -->
        <module name="EmptyStatement"/>

        <!-- Неиспользуемые импорты -->
        <module name="UnusedImports"/>

        <!-- Пробелы после запятых -->
        <module name="WhitespaceAfter">
            <property name="tokens" value="COMMA, SEMI"/>
        </module>

        <!-- Пустые строки МЕЖДУ элементами -->
        <module name="EmptyLineSeparator">
            <property name="tokens" value="IMPORT, CLASS_DEF, INTERFACE_DEF, ENUM_DEF, METHOD_DEF, CTOR_DEF"/>
            <property name="allowNoEmptyLineBetweenFields" value="true"/>
            <property name="allowMultipleEmptyLines" value="false"/>
        </module>

        <!-- Пустые строки ВНУТРИ классов (между полями) -->
        <module name="EmptyLineSeparator">
            <property name="tokens" value="VARIABLE_DEF"/>
            <property name="allowMultipleEmptyLines" value="false"/>
            <property name="allowMultipleEmptyLinesInsideClassMembers" value="false"/>
        </module>

        <!-- Проверка форматирования enum -->
        <module name="ArrayTrailingComma"/>

        <!-- Проверка отступов -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
        </module>

    </module>

    <!-- Дополнительные проверки на уровне файла -->
    <module name="RegexpMultiline">
        <property name="format" value="\n[\s]*\n[\s]*\n"/>
        <property name="message" value="Найдены множественные пустые строки"/>
    </module>

</module>